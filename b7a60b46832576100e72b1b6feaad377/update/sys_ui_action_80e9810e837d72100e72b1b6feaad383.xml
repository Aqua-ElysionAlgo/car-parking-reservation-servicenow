        <onclick>var reason = prompt('กรุณาระบุเหตุผลที่ Reject'); if (!reason) {   return false; }  // เก็บไว้ในฟอร์ม เผื่ออยากเอาไปใช้ต่อ g_form.setValue('cpr_reject_reason', reason);  // ส่งไปให้ UI Action ฝั่ง server ทำงาน gsftSubmit(null, g_form.getFormElement(), 'c</onclick>
        <order>100</order>
        <script><![CDATA[// หา approval record ของคนที่กดอยู่ แล้ว set เป็น rejected + ใส่ comment
var appr = new GlideRecord('sysapproval_approver');
appr.addQuery('sysapproval', current.sys_id);
appr.addQuery('approver', gs.getUserID());
appr.addQuery('state', 'requested');
appr.setLimit(1);
appr.query();

if (appr.next()) {
  // ดึงเหตุผลจากฟอร์ม (ที่ client setValue ไว้)
  var reason = current.getValue('cpr_reject_reason') || '';

  appr.state = 'rejected';
  if (reason) {
    appr.comments = reason; // Business Rule ของคุณจะไปอ่าน comments.getJournalEntry(-1)
  }
  appr.update();

  gs.addInfoMessage('Reject เรียบร้อยแล้ว');
} else {
  gs.addErrorMessage('ไม่พบรายการอนุมัติของคุณ (อาจไม่ได้เป็น approver หรือไม่ได้อยู่ state=requested)');
}

action.setRedirectURL(current);
]]></script>
