        <script><![CDATA[var appr = new GlideRecord('sysapproval_approver');
appr.addQuery('sysapproval', current.sys_id);
appr.addQuery('approver', gs.getUserID());
appr.addQuery('state', 'requested');
appr.setLimit(1);
appr.query();

if (appr.next()) {
  appr.setValue('state', 'approved');
  appr.update();

  // เปลี่ยน field ให้ถูกชื่อจริงของคุณ: status หรือ cpr_status
  current.setValue('status', 'confirmed');  // ถ้าฟิลด์ชื่อ status และ value เป็น confirmed
  // current.setValue('cpr_status', 'confirmed'); // ถ้าของคุณชื่อ cpr_status
  current.update();

  gs.addInfoMessage('Approve เรียบร้อยแล้ว');
} else {
  gs.addErrorMessage('ไม่พบรายการอนุมัติของคุณ');
}

action.setRedirectURL(current);
]]></script>
